<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img"
        android:src="@drawable/matma"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/edt1"
        android:textSize="22sp"
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/img"
        android:layout_alignEnd="@+id/img"
        android:layout_alignStart="@+id/img" />
    <EditText
        android:id="@+id/edt2"
        android:textSize="22sp"
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/edt1"
        android:layout_alignEnd="@+id/edt1"
        android:layout_alignStart="@id/edt1"/>
    <RadioButton
        android:id="@+id/rdb1"
        android:layout_below="@id/edt2"
        android:layout_alignStart="@id/edt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtv1"
        android:text="remember me"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rdb1"
        android:layout_alignEnd="@id/button2"
        android:layout_toEndOf="@id/rdb1"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/txtv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="forgot password?"
        android:textSize="22sp"
        tools:textColor="@color/colorAccent" />
    <Button
        android:id="@+id/btn3"
        android:text="Sign up"
        android:textSize="22sp"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true" />
    <Button
        android:id="@+id/btn4"
        android:text="Login"
        android:textSize="22sp"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>